<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Notes"
                android:layout_width="match_parent"
                android:layout_height="139dp" android:id="@+id/textView2" android:layout_weight="1"
                android:textSize="60sp" android:textAlignment="center" android:textAllCaps="false"
                android:fontFamily="cursive" android:gravity="center"/>
        <LinearLayout
                android:id="@+id/card_hybrid_server_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1"/>
        <LinearLayout
                android:id="@+id/card_hybrid_local_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp" android:layout_weight="1" android:padding="10dp"
                android:layout_margin="10dp" android:layout_marginEnd="10dp" android:paddingEnd="10dp">

            <Button
                    android:id="@+id/view_hybrid_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#c0996a"
                    android:text="View ALL"/>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>