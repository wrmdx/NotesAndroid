<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Notes"
                android:layout_width="match_parent"
                android:layout_height="400dp" android:id="@+id/textView2"
                android:textSize="60sp" android:textAlignment="center" android:textAllCaps="false"
                android:fontFamily="cursive" android:gravity="center"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/linearLayout" android:gravity="center">
            <Button
                    android:text="Local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/local_btn"
                    tools:layout_conversion_absoluteHeight="48dp" tools:layout_editor_absoluteY="683dp"
                    tools:layout_editor_absoluteX="0dp" tools:layout_conversion_absoluteWidth="91dp"
                    android:backgroundTint="#C0996A"/>
            <Button
                    android:text="Server"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/server_btn"
                    tools:layout_conversion_absoluteHeight="48dp" tools:layout_editor_absoluteY="683dp"
                    tools:layout_editor_absoluteX="91dp" tools:layout_conversion_absoluteWidth="91dp"
                    android:backgroundTint="#C0996A"/>
            <Button
                    android:text="Hybrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/hybrid_btn"
                    tools:layout_conversion_absoluteHeight="48dp" tools:layout_editor_absoluteY="683dp"
                    tools:layout_editor_absoluteX="181dp" tools:layout_conversion_absoluteWidth="91dp"
                    android:backgroundTint="#C0996A"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>